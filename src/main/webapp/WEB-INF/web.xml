<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         id="WebApp_ID" version="3.1" metadata-complete="false">
    <display-name>Library</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Session Configuration -->
    <session-config>
        <session-timeout>10</session-timeout>
    </session-config>

    <filter>
        <filter-name>CommandAccessFilter</filter-name>
        <filter-class>com.library.name.web.filter.CommandAccessFilter</filter-class>
        <init-param>
            <param-name>admin</param-name>
            <param-value>addBook editUser usersList</param-value>
        </init-param>
        <init-param>
            <param-name>librarian</param-name>
            <param-value>addBook librarianMenu</param-value>
        </init-param>
        <init-param>
            <param-name>client</param-name>
            <param-value>listOrders</param-value>
        </init-param>
        <init-param>
            <param-name>common</param-name>
            <param-value>logout noCommand viewSettings updateSettings listOrders orderBook</param-value>
        </init-param>
        <init-param>
            <param-name>out-of-control</param-name>
            <param-value>login catalog changeLocale registration</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CommandAccessFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.library.name.web.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>

    <servlet>
        <servlet-name>BookOrderServlet</servlet-name>
        <servlet-class>com.library.name.servlets.BookOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookOrderServlet</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>com.library.name.web.Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>DataSource</param-name>
        <param-value>jdbc/mysql</param-value>
    </context-param>

    <resource-env-ref>
        <description>Provide access for DataSource</description>
        <resource-env-ref-name>jdbc/mysql</resource-env-ref-name>
        <resource-env-ref-type>javax.sql.DataSource</resource-env-ref-type>
    </resource-env-ref>

